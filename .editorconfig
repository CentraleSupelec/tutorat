# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[config/**/*.{yaml,yml}]
indent_size = 2

[translations/*.{yaml,yml}]
indent_size = 2

[docker-compose.{yaml,yml}]
indent_size = 2

[*.scss]
indent_size = 2

[provisioning/**.{yaml,yml}]
indent_size = 2

[kustomize/**.{yaml,yml}]
indent_size = 2

[.gitlab-ci.yml]
indent_size = 2
